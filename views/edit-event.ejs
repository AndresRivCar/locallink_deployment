<main class="contenedor contenedor-formularios">
    <h1><%- pageName %></h1>
    <form class="default-form" method="POST">
        <fieldset><legend>Sobre el Evento</legend></fieldset>
        <div class="campo">
            <label>Grupo</label>
            <select name="groupId">
                <option value="" disabled selected>-- Selecciona group --</option>
                <% if(groups.length > 0 ) { %>
                    <% groups.forEach(group => { %>
                        <option <%= (event.groupId === group.id ) ? 'selected' : '' %> value="<%= group.id %>"><%= group.name%></option>
                    <% }) %>
                <% } %>
            </select>
        </div>
        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="title" value="<%= event.title %>">
        </div>
        <div class="campo">
            <label>Invitado</label>
            <input type="text" name="guest" value="<%= event.guest %>">
        </div>
        <div class="columnas-2 grid">
            <div class="campo">
                <label>Fecha</label>
                <input type="date" name="date" value="<%= event.date %>">
            </div>
            <div class="campo">
                <label>Hora</label>
                <input type="time" name="time" value="<%= event.time %>">
            </div>
        </div>
        <div class="campo">
            <label>Cupo</label>
            <input type="number" min="1" name="capacity" value="<%= event.capacity %>">
        </div>
        <div class="campo descripcion">
            <label>Descripción</label>
            <div class="contenedor-editor">
                <input type="hidden" id="x" name="description" value="<%= event.description %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <fieldset>
            <legend>Ubicación Evento</legend>
        </fieldset>

        <div class="campo buscador">
            <label>Coloca la Dirección del Evento</label>
            <input type="text" id="searchform" placeholder="Ubicación">
        </div>
        <small><strong>El asistente colocará una dirección estimada</strong></small>
        <div class="campo mapa">
            <div id="map"></div>
        </div>
        <strong><p class="informacion" style="text-align: center; font-weight: bold;">Mueve el Pin hacia el punto exacto en caso de ser necesario</p></strong>

        <p class="informacion" style="text-align: center; font-weight: bold;">Confirma que los siguientes campos sean correctos:</p>

        <div class="campo">
            <label>Dirección</label>
            <input type="text" id="address" name="address" value="<%= event.address %>">
        </div>
        <div class="campo">
            <label>Ciudad</label>
            <input type="text" id="city" name="city" value="<%= event.city %>">
        </div>
        <div class="campo">
            <label>Estado</label>
            <input type="text" id="state" name="state" value="<%= event.state %>">
        </div>
        <div class="campo">
            <label>País</label>
            <input type="text" id="country" name="country" value="<%= event.country %>">
        </div>
            <input type="hidden" id="lat" name="lat" readonly="readonly" value="<%= event.location.coordinates[0] %>">
            <input type="hidden" id="lng" name="lng" readonly="readonly" value="<%= event.location.coordinates[1] %>">
        <div class="campo enviar">
            <input type="submit" class="btn btn-rosa" value="Guardar Cambios">
        </div>        
    </form>
</main>